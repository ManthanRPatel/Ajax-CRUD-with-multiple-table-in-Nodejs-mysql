  <input class="form-control" type="text" name="learner_name" value="<%=data.learner_name %>" required>
  <input class="form-control" type="text" name="learner_email" value="<%=data.learner_email %>" required >
  <input class="form-control" type="text" name="course_Id" value="<%=data.course_Id %>" required>
  <input type="hidden" name="_method" value="PUT">
    <button class="btn btn-info" type="submit">Update</button>
</form><br><br>
<%});%>

